{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2022",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "build", "**/*.test.ts"],
  "include": ["./src", "package.json"]
}
